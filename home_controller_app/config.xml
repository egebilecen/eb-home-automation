<?xml version='1.0' encoding='utf-8'?>
<widget id="eb.home.controller" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EB Home Controller</name>
    <description>
        EB Home Controller
    </description>
    <author email="egebilecen@icloud.com" href="http://github.com/EgeBilecen">
        Ege Bilecen
    </author>
    <content src="login.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <icon density="mdpi" src="icons/res/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="icons/res/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="icons/res/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="icons/res/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="icons/res/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>
    <preference name="Fullscreen" value="false" />
    <preference name="Orientation" value="portrait" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="KeepRunning" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="InAppBrowserStorageEnabled" value="true" />
    <preference name="AndroidPersistentFileLocation" value="Internal" />
</widget>
